@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading1("Striped")
    using (Html.Bootstrap().Div().SetId("test-striped").Begin())
    {
        using (var table = Html.Bootstrap(this).Table().SetStyle(TableStyle.Striped).Begin())
        {
            @table.TableHeaderRow("#", "First Name", "Last Name", "Username")
            @table.TableDataRow("1", "Mark", "Otto", "mdo")
            @table.TableDataRow("2", "Jacob", "Thornton", "fat")
        }
    }
    
    <hr />

    @Html.Bootstrap().Heading1("Explicit Sections")
    using (Html.Bootstrap().Div().SetId("test-explicit-sections").Begin())
    {
        using (var table = Html.Bootstrap(this).Table().Begin())
        {
            using (table.TableHeadSection().Begin())
            {
                @table.TableHeaderRow("#", "First Name", "Last Name", "Username")
                @table.TableDataRow("1", "Mark", "Otto", "mdo")
            }
            using (table.TableBodySection().Begin())
            {
                @table.TableHeaderRow("#", "First Name", "Last Name", "Username")
                @table.TableDataRow("2", "Jacob", "Thornton", "fat")
            }
        }
    }

    <hr />

    @Html.Bootstrap().Heading1("Responsive")
    using (Html.Bootstrap().Div().SetId("test-responsive").Begin())
    {
        using (var table = Html.Bootstrap(this).Table().SetResponsive().Begin())
        {
            using (table.TableHeadSection().Begin())
            {
                @table.TableHeader("#")
                @table.TableHeader("First Name")
                @table.TableHeader("Last Name")
                @table.TableHeader("Username").ColSpan(2)
                @table.TableDataRow("1", "Mark", "Otto", "mdo", "colspan").SetState(TableState.Warning)
            }
            using (table.TableBodySection().Begin())
            {
                @table.TableDataRow("2", "Jacob", "Thornton", "fat", "colspan")
            }
            using (table.TableFootSection().Begin())
            {
                @table.TableDataRow("3", "Matthieu", "Chomienne", "mch", "colspan")
                using (table.TableRow().Begin())
                {
                    @table.TableData("1").RowSpan(2)
                    @table.TableData("Mark")
                    @table.TableData("Otto")
                    @table.TableData("mdo")
                    @table.TableData("colspan")
                }
                @table.TableDataRow("Jacob", "Thornton", "fat", "colspan")
            }
        }
        using (var table = Html.Bootstrap(this).Table().Begin())
        {
            @table.TableHeaderRow("#", "First Name", "Last Name", "Username")
            @table.TableData("1")
            @table.TableData("Mark")
            @table.TableData("Otto")
            @table.TableData("mdo")
        }
    }
}